{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["ESNext"],
        "allowJs": true,
        "checkJs": true,
        "jsx": "preserve",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node"
    }
}